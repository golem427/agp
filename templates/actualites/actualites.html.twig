{% extends 'base.html.twig' %}

{% block title %}ACTUALITES{% endblock %}

{% block body %}

	{% block actualites %}

<div class="row">

<!-- BREADCRUMB -->
    <nav class="bg-gray-200">
      <div class="container">
        <div class="row">
          <div class="col-12">

            <!-- Breadcrumb -->
            <ol class="breadcrumb breadcrumb-scroll">
              <li class="breadcrumb-item">
                <a href= "{{ path('home')}}" class="text-gray-700">
                  Accueil
                </a>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
                Actualités
              </li>
            </ol>
          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </nav>

    <!-- SEARCH -->
    <section class="py-6">
      <div class="container">
        <div class="row">
          <div class="col-12">

            <!-- Form -->
            <form class="rounded shadow">
              <div class="input-group input-group-lg">

                <!-- Text -->
                <span class="input-group-text border-0 pe-1">
                  <i class="fe fe-search"></i>
                </span>

                <!-- Input -->
                <input type="text" class="form-control border-0 px-1" aria-label="Search our blog..." placeholder="Rechercher..." value="">
                <!-- Text -->
                <span class="input-group-text border-0 py-0 ps-1 pe-3">

                  <!-- Text -->
                  <span class="h6 text-uppercase text-muted d-none d-md-block mb-0 me-5">
                    résultats...
                  </span>

                  <!-- Button -->
                  <button type="submit" class="btn btn-sm btn-warning">
                    Soumettre
                  </button>

                </span>

              </div>
            </form>

          </div>
        </div> <!-- / .row -->
      </div>
    </section>



    <!-- ARTICLES -->
<section>
  <div class="container">
    <div class="row">
        
        {% for blogpost in blogposts %}
        
          <div class="col-12 col-md-6 col-lg-4 d-flex">
            <!-- Card -->
            <div class="card mb-6 shadow-light-lg lift lift-lg">
              <!-- Image -->
              <a class="card-img-top" href="#!">
                <!-- Image -->
                <img src={{blogpost.file}} alt="..." class="card-img-top">
                <!-- Shape -->
                <div class="position-relative">
                  <div class="shape shape-bottom shape-fluid-x text-white">
                    {# {{> curves/curve-3}} #}
                  </div>
                </div>
              </a>

              <!-- Body -->
              <a class="card-body" href="#!">
                <!-- Heading -->
                <h3>
                  {{blogpost.titre}}
                </h3>
                <!-- Text -->
                <p class="mb-0 text-muted">
                  {{blogpost.contenu}}
                </p>
              </a>

              <!-- Meta -->
              <a class="card-meta mt-auto" href="#!">
                <!-- Divider -->
                <hr class="card-meta-divider">
                <!-- Avatar -->
                <div class="avatar avatar-sm me-2">
                  <img src="/img/avatars/avatar-1.jpg" alt="..." class="avatar-img rounded-circle">
                </div>
                <!-- Author -->
                <h6 class="text-uppercase text-muted me-2 mb-0">
                  J. Aguado
                </h6>
                <!-- Date -->
                <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                  <time datetime="2019-05-02">{{blogpost.createdAt|date('d/m/y')}}</time>
                </p>
              </a>
            </div>
           
          </div>  
           {% endfor %}
    </div>
  </div>
  <div class="d-flex justify-content-center">
  {% do blogposts.setPageRange(3)%}
  {{ knp_pagination_render(blogposts, 'include/_paginator.html.twig') }}
  </div>
	{% endblock %}
{% endblock %}
