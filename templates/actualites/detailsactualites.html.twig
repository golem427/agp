{% extends "home/home.html.twig" %}


{% block body %}
<!-- BREADCRUMB -->
    <nav class="bg-gray-200">
      <div class="container">
        <div class="row">
          <div class="col-12">

            <!-- Breadcrumb -->
            <ol class="breadcrumb breadcrumb-scroll">
              <li class="breadcrumb-item">
                <a href= "{{ path('home')}}" class="text-gray-700">
                  Accueil
                </a>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
              <a href= "{{ path('actualites')}}" class="text-gray-700">
                Actualités</a>
              </li>
			   <li class="breadcrumb-item active" aria-current="page">
              <a href="{{ path('details_actu', {'slug': blogpost.slug}) }}" class="text-gray-700">
                Détail-actualité</a>
              </li>
            </ol>
          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </nav>

	<!-- IMAGE -->
    <div>	
      <a href="{{ path('actualites') }}">
		    <section data-jarallax data-speed=".8" class="bg-cover jarallax" 
			style="background-image: url(" {{ vich_uploader_asset(blogpost, 'imageFile') }} ");">
        </section>
      </a>
    </div>

		<!-- HEADER -->
		<section class="pt-8 pt-md-11 pb-8 pb-md-11">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-12 col-md-10 col-lg-9 col-xl-8">

						<!-- Heading -->
						<h1 class="display-4 text-center">
								{{ blogpost.titre }}
						</h1>

						<!-- Text -->
						<p class="lead mb-7 text-center text-muted">
							{{ blogpost.contenu }}
						</p>

						<!-- Meta -->
						<div class="row align-items-center py-5 border-top border-bottom">
							<div class="col-auto">
								<!-- Avatar -->
								<div class="avatar avatar-lg">
									<img src="/img2/Jose-detoure.png" alt="..." class="avatar-img rounded-circle">
								</div>
							</div>
							<div class="col ms-n5">
								<!-- Name -->
								<h6 class="text-uppercase mb-0">
									J.Aguado
								</h6>
								<!-- Date -->
								<time class="fs-sm text-muted" datetime="2019-05-20">
									Publié le :
									{{ blogpost.createdAt|date('d/m/y') }}
								</time>
							</div>

							<div class="col-auto">

								<!-- Share -->
								<span class="h6 text-uppercase text-muted d-none d-md-inline me-4">
									Partagez !
								</span>

								<!-- Icons -->
								<ul class="d-inline list-unstyled list-inline list-social">
									<li class="list-inline-item list-social-item me-3">
										<a href="#" class="text-decoration-none">
											<img src="/img/icons/social/instagram.svg" class="list-social-icon" alt="...">
										</a>
									</li>
									<li class="list-inline-item list-social-item me-3">
										<a href="#" class="text-decoration-none">
											<img src="/img/icons/social/facebook.svg" class="list-social-icon" alt="...">
										</a>
									</li>
									<li class="list-inline-item list-social-item me-3">
										<a href="#" class="text-decoration-none">
											<img src="/img/icons/social/twitter.svg" class="list-social-icon" alt="...">
										</a>
									</li>
								</ul>

							</div>
						</div>

					</div>
				</div>
				<!-- / .row -->
			</div>
			<!-- / .container -->
		</section>


		<!-- SECTION -->
		<section class="pt-6 pt-md-8">
			<div class="container">
				<div class="row justify-content-center">
					<div
						class="col-12 col-md-10 col-lg-9 col-xl-8">

						<!-- Fugure -->
						<figure
							class="figure mb-7">

							<!-- Image -->
							<img
							class="figure-img img-fluid rounded lift lift-lg"
							src="{{ vich_uploader_asset(blogpost, 'imageFile') }}" alt="karin">

							<!-- Caption -->
							<figcaption class="figure-caption text-center">
								2023 - Tous droits réservés
							</figcaption>

						</figure>

						<!-- Text -->
						<p>
							{{ blogpost.contenu }}
						</p>


					</div>
				</div>
				<!-- / .row -->
			</div>
			<!-- / .container -->
		</section>

		{% include "commentaires/form.html.twig" %}
		
		{% include "commentaires/commentaires.html.twig" %}

{% endblock %}
