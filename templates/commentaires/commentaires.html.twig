<section class="pt-7 pt-md-10 pb-7 pb-md-10">
<div class="container mb-2">
			<div class=" row justify-content-center">
					<div class="col-12 col-md-10 col-lg-9 col-xl-8">
						<div class="card card-row shadow-light-lg">
							<div class="row gx-10">
								{% for commentaire in commentaires %}
									<div class="card-body">
										<blockquote class="mb-0 text-center">
											<p>
												{{ commentaire.contenu|raw }}
											</p>
											<footer class="blockquote-footer">
												<span class="h6 text-uppercase">Par
													{{ commentaire.auteur }}
													le
													{{ commentaire.createdAt|date('d/m/Y') }}
												</span>
											</footer>
										</blockquote>
									</div>
								{% endfor %}
							</div>
						</div>
					</div>
			</div>
		</div>
</section>	

