{% block blogpost %}

	<!-- ARTICLES -->
	<section class="pt-7 pt-md-10 pb-7 pb-md-10">
		<div class="container">
			<div class="row align-items-center mb-5">
				<div
					class="col-12 col-md">

					<!-- Heading -->
					<h3 class="mb-0">
						Derniers posts
					</h3>

					<!-- Text -->
					<p class="mb-0 text-muted">
						Voilà de quoi nous sommes capables!
					</p>

				</div>
				<div
					class="col-12 col-md-auto">

					<!-- Button -->
					<a href="{{ path('actualites') }}" class="btn btn-sm btn-warning lift">
						Voir tout
					</a>

				</div>
			</div>
			<!-- / .row -->
			<div class="row">
				{% for blogpost in blogposts %}

					<div
						class="col-12 col-md-6 col-lg-4 d-flex">

						<!-- Card -->
						<div
							class="card mb-6 mb-lg-0 shadow-light-lg lift lift-lg">

							<!-- Image -->
							<a
								class="card-img-top" href="{{ path('actualites') }}" >

								<!-- Image -->
								<img
								src="{{ vich_uploader_asset(blogpost, 'imageFile') }}" alt="karin" class="card-img-top">

								<!-- Shape -->
								<div class="position-relative">
									<div class="shape shape-bottom shape-fluid-x text-white">
										<svg viewbox="0 0 2880 480" fill="none" 
										xmlns="#">
									<path fill-rule="evenodd" 
									clip-rule="evenodd"
									 d="M2160 0C1440 240 720 240 720 240H0v240h2880V0h-720z" 
									 fill="currentColor"/></svg>
									</div>
								</div>
							</a>

							<!-- Body -->
							<a
								class="card-body" href="{{ path('actualites') }}">

								<!-- Heading -->
								<h3>
									{{ blogpost.titre }}
								</h3>

								<!-- Text -->
								<p class="mb-0 text-muted">{{ blogpost.contenu|u.truncate('200', '...', false)}}
								</p>
							</a>

							<!-- Meta -->
							<a
								class="card-meta mt-auto" href="{{ path('details_actu', {'slug': blogpost.slug}) }}">

								<!-- Divider -->
								<hr
								class="card-meta-divider">

								<!-- Avatar -->
								<div class="avatar avatar-sm me-2">
									<img src="/img2/Jose-detoure.png" alt="..." class="avatar-img rounded-circle">
								</div>

								{# <!-- Author -->
								<h6 class="text-uppercase text-muted me-2 mb-0">
									J. Aguado
								</h6> #}

								<!-- Date -->
								<p class="h6 text-uppercase text-muted mb-0 ms-auto">
									<time datetime="2019-05-02">Actu publiée le {{blogpost.createdAt|date('d/m/y')}}</time>
								</p>

							</a>

						</div>

					</div>
				{% endfor %}

			</div>
			
		</div>
		<!-- / .row -->
	</div>
	<!-- / .container -->
</section>

{% endblock %}
