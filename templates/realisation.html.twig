{% block realisation %}
	<!-- ARTICLES -->
	<section class="pt-7 pt-md-10 pb-7 pb-md-10">
		<div class="container">
			<div class="row align-items-center mb-5">
				<div
					class="col-12 col-md">

					<!-- Heading -->
					<h3 class="mb-0">
						Dernières réalisations
					</h3>

					<!-- Text -->
					<p class="mb-0 text-muted">
						Au coeur de notre travail.
					</p>
				</div>
				<div
					class="col-12 col-md-auto">
					<!-- Button -->
					<a href="{{ path('realisations') }}" class="btn btn-sm btn-warning btn-outline-warning-300 d-none d-md-inline">
						Voir tout
					</a>
				</div>
			</div>
			<!-- / .row -->

			{% for realisation in realisations %}
				<section>
					<div class="card mb-3">
						<a href="{{ path('real_details', {'slug': realisation.slug}) }}">
							<img src="{{ vich_uploader_asset(realisation, 'imageFile')| imagine_filter('welcome') }}" alt="alex" class="card-img-top">
						</a>
							<div class="card-body">
								<h4 class="mb-0">{{ realisation.nom }}</h4>
								<p class="mb-0 text-muted">{{ realisation.description }}</p>
								<p class="h6 text-uppercase text-muted mb-0 ms-auto">
									<time datetime="2019-05-02">{{realisation.createdAt|date('d/m/y')}}</time>
								</p>
							</div>
						</div>
				</section>
			{% endfor %}
		</div>
	</section>
{% endblock %}
