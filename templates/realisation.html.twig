{% block realisation %}
  <!-- ARTICLES -->
    <section class="pt-7 pt-md-10">
      <div class="container">
        <div class="row align-items-center mb-5">
          <div class="col-12 col-md">

            <!-- Heading -->
            <h3 class="mb-0">
              Dernières réalisations
            </h3>

            <!-- Text -->
            <p class="mb-0 text-muted">
              Au coeur de notre travail.
            </p>

          </div>
          <div class="col-12 col-md-auto">

            <!-- Button -->
            <a href="{{ path('realisations') }}" class="btn btn-sm btn-warning btn-outline-warning-300 d-none d-md-inline">
              Voir tout
            </a>
          </div>
          
        </div> <!-- / .row -->
            {% for realisation in realisations %}
            <div class="row">
            <div class="col-12">

            <!-- Card -->
            <div class="card card-row shadow-light-lg mb-6">
              <div class="row gx-0">
                <div class="col-12 col-md-6">

                  <!-- Slider -->
                  <div class="card-img-slider" data-flickity='{"fade": true, "imagesLoaded": true, "pageDots": false, "prevNextButtons": false, "asNavFor": "#blogSlider", "draggable": false}'>
                    <a class="card-img-start position-absolute d-block w-100 bg-cover" 
                    href="{{ path('realisations_details', {'slug': realisation.slug }) }}">
                      <!-- Image (placeholder) -->
                      <img src="{{ vich_uploader_asset(realisation, 'image') }}" alt="alex" class="img-fluid">{# d-md-none #}
                     </a>

                    <a class="card-img-start position-absolute d-block w-100 bg-cover" 
                    href="{{ path('realisations_details', {'slug': realisation.slug}) }}">
                      <!-- Image (placeholder) -->
                      <img src="{{ vich_uploader_asset(realisation, 'image') }}" alt="alex" class="img-fluid ">{# d-md-none #}
                    </a>
                  </div>

                  <!-- Shape -->
                  <div class="shape shape-end shape-fluid-y text-white d-none d-md-block">
                    <svg viewBox="0 0 112 690" fill="none" xmlns="#
                    "><path d="M116 0H51v172C76 384 0 517 0 517v173h116V0z" 
                    fill="currentColor"/></svg>  
                  </div>
                </div>

                <div class="col-12 col-md-6 position-static">

                  <!-- Slider -->
                  <div class="position-static" data-flickity='{"wrapAround": true, "pageDots": false, "imagesLoaded": true, "adaptiveHeight": true}' id="blogSlider">
                    <div class="w-100">

                      <!-- Body -->
                      <a class="card-body" href="#">
                        <!-- Heading -->
                        <h3>
                          {{ realisation.nom }}
                        </h3>
                        <!-- Text -->
                        <p class="mb-0 text-muted">
                         {{ realisation.description|u.truncate('100', '...', 3) }}
                        </p>
                      </a>

                      <!-- Meta -->
                      <a class="card-meta mt-auto" href="#!">

                        <!-- Divider -->
                        <hr class="card-meta-divider">

                        <!-- Avatar -->
                        <div class="avatar avatar-sm me-2">
                          <img src="/img/avatars/avatar-2.jpg" alt="..." class="avatar-img rounded-circle">
                        </div>

                        <!-- Author -->
                        <h6 class="text-uppercase text-muted me-2 mb-0">
                          José Aguado
                        </h6>

                        <!-- Date -->
                        <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                          <time datetime="2019-05-02">Réalisé le {{ realisation.createdAt|date('d/m/y')}}</time>
                        </p>

                      </a>

                    </div>
                    <div class="w-100">

                      <!-- Body -->
                      <a class="card-body" href="#!">

                        <!-- Heading -->
                        <h3>
                          {{ realisation.nom }}
                        </h3>

                        <!-- Text -->
                        <p class="mb-0 text-muted">
                         {{ realisation.description|u.truncate('100', '...', false) }}
                        </p>

                      </a>

                      <!-- Meta -->
                      <a class="card-meta mt-auto" href="#!">

                        <!-- Divider -->
                        <hr class="card-meta-divider">

                        <!-- Avatar -->
                        <div class="avatar avatar-sm me-2">
                          <img src="/img/avatars/avatar-1.jpg" alt="..." class="avatar-img rounded-circle">
                        </div>

                        <!-- Date -->
                        <p class="h6 text-uppercase text-muted mb-0 ms-auto">
                         	<time datetime="2019-05-02">Realisation faite le {{realisation.createdAt|date('d/m/y')}}</time>
                        </p>
                      </a>
                    </div>
                  </div>
                </div>
               </div> <!-- / .row -->
            </div>
          </div>

          {% endfor %}

        </div> <!-- / .row -->

      </div> <!-- / .container -->

    </section>

{% endblock %}